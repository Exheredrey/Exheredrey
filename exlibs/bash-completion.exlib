MYOPTIONS="bash-completion"

DEPENDENCIES="
    post:
        bash-completion? (
            app-admin/eclectic
            app-shells/bash-completion
        )"

export BASHCOMPLETIONDIR=/usr/share/bash-completion/completions

dobashcompletion() {
    illegal_in_global_scope

    [[ -z "$1" ]] && die "usage: dobashcompletion <file> [ <installed name> ]"
    if option bash-completion; then
        insinto "${BASHCOMPLETIONDIR}"
        newins "${1}" "${2:-${PN}}"
    fi
}

bash-completion_src_install() {
    local c
    for c in "${BASH_COMPLETIONS[@]}"; do
        dobashcompletion ${c}
    done
}

export_exlib_phases src_install

