export_exlib_phases src_compile src_test src_install

DEPENDENCIES="
    build:
        sys-devel/ninja
"

eninja() {
    edo ninja -v -j${EXJOBS:-1} "$@"
}

ninja_src_compile() {
    eninja
}

ninja_src_test() {
    eninja test
}

ninja_src_install() {
    DESTDIR="${IMAGE}" eninja install
}

