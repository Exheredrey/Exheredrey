require boost

PLATFORMS="~amd64 ~x86"

src_prepare() {
    default

    edo sed \
        -e "s/pkg-config/$(exhost --tool-prefix)pkg-config/g" \
        -i bootstrap.sh

    # https://github.com/boostorg/boost/issues/258
    edo sed \
        -e "/if \$(tag) = gcc /s/&& \[ numbers.less/#&/" \
        -i tools/build/src/tools/common.jam
}

