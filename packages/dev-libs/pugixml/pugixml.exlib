require github [ user=zeux tag=v${PV} ] cmake [ api=2 ]

export_exlib_phases src_prepare

SUMMARY="Light-weight, simple and fast XML parser for C++ with XPath support"
DESCRIPTION="
pugixml is a light-weight C++ XML processing library. It features:

- DOM-like interface with rich traversal/modification capabilities
- Extremely fast non-validating XML parser which constructs the DOM tree from an XML file/buffer
- XPath 1.0 implementation for complex data-driven tree queries
- Full Unicode support with Unicode interface variants and automatic encoding conversions
"

BUGS_TO="sardemff7@exherbo.org"

LICENCES="MIT"
SLOT="0"
MYOPTIONS=""

DEPENDENCIES=""

CMAKE_SRC_CONFIGURE_PARAMS=(
    -DBUILD_DEFINES:STRING=PUGIXML_HAS_LONG_LONG
    -DBUILD_SHARED_LIBS:BOOL=TRUE
)
CMAKE_SRC_CONFIGURE_TESTS=(
    '-DBUILD_TESTS:BOOL=TRUE -DBUILD_TESTS:BOOL=FALSE'
)

pugixml_src_prepare() {
    cmake_src_prepare

    # fails document_load_file_special_folder, last checked: 1.9
    edo rm tests/test_document.cpp
}

