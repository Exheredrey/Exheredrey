require github [ user=graeme-hill tag=v${PV} ] cmake [ api=2 ]

SUMMARY="Lightweight cross platform C++ GUID/UUID library"

LICENCES="MIT"
SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS=""

DEPENDENCIES="
    build+run:
        sys-apps/util-linux [[ note = [ libuuid ] ]]
"

src_test() {
    edo ./xgtest
}

src_install() {
    insinto /usr/$(exhost --target)/include
    doins "${CMAKE_SOURCE}"/Guid.hpp

    dolib libxg.a
}

