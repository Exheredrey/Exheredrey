require perl-module [ module_author=RAAB ]

SUMMARY="Perl module for postprocessing the output from the sgmls and nsgmls parsers"

PLATFORMS="~amd64 ~armv7 ~armv8 ~x86"
SLOT="0"

src_prepare() {
    default

    # Shipped read-only and we need to overwrite it in src_configure
    edo rm -f MYMETA.yml
}

src_install() {
    perl-module_src_install

    dosym sgmlspl.pl /usr/$(exhost --target)/bin/sgmlspl
}

