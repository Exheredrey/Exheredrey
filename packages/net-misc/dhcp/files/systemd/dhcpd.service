[Unit]
Description=DHCP Daemon
Requires=network.target
After=network.target

[Service]
EnvironmentFile=/etc/conf.d/dhcpd.conf
ExecStart=/usr/host/bin/dhcpd -cf ${DHCPD_CONF} -q -f $DHCPD_OPTS ${DHCPD_IFACE}

[Install]
WantedBy=multi-user.target
