[Unit]
Description=DHCP Daemon on interface %I
Requires=network.target
After=network.target

[Service]
EnvironmentFile=/etc/conf.d/dhcpd-%i.conf
ExecStart=/usr/host/bin/dhcpd -cf $DHCPD_CONF -lf /var/db/dhcpd-%i.leases -pf /run/dhcpd-%i.pid -q -f $DHCPD_OPTS %i

[Install]
WantedBy=multi-user.target
