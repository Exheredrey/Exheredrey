SCM_REPOSITORY="https://git.ghostscript.com/jbig2dec.git"

require scm-git autotools [ supported_autoconf=[ 2.5 ] supported_automake=[ 1.16 ] ] jbig2dec

PLATFORMS="~amd64"

src_unpack() {
    default

    scm_src_unpack
}

src_prepare() {
    jbig2dec_src_prepare

    # autogen.sh creates config_types.h.in
    edo sed -n '/creating config_types\.h\.in/,/^EOF/p' autogen.sh > tiny-autogen.sh
    edo sh tiny-autogen.sh

    autotools_src_prepare
}

