SUMMARY="Compiler cache"
HOMEPAGE="https://${PN}.samba.org"
DOWNLOADS="https://samba.org/ftp/${PN}/${PNV}.tar.xz"

MY_PV=$(ever replace_all _)
UPSTREAM_RELEASE_NOTES="${HOMEPAGE}/releasenotes.html#_${PN}_${MY_PV%_0}"

LICENCES="GPL-3"
SLOT="0"
MYOPTIONS=""

DEPENDENCIES="
    build+run:
        sys-libs/zlib[>=1.2.3]
"

DEFAULT_SRC_CONFIGURE_PARAMS=(
    --enable-man
    --without-bundled-zlib
)

src_prepare() {
    # remove broken test, last checked: 3.6
    edo sed \
        -e '/debug_prefix_map/d' \
        -i test/run

    default
}

