require sourceforge [ suffix=tar.gz ] elisp [ with_opt=true source_directory=contrib/xcscope ]

SUMMARY="A developer's tool for browsing source code"

LICENCES="BSD-3"
SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS="emacs"

DEPENDENCIES="
    build+run:
        sys-libs/ncurses
"

DEFAULT_SRC_PREPARE_PATCHES=( "${FILES}"/${PN}-15.7a-ocs-sysdir.patch )

DEFAULT_SRC_COMPILE_PARAMS=( STRIP="no" )

src_compile() {
    default

    elisp_src_compile
}

src_install() {
    default

    elisp_src_install

    if option emacs; then
        dobin contrib/xcscope/cscope-indexer
    fi
}

