SUMMARY="Tool to display dialog boxes from a shell"
HOMEPAGE="https://invisible-island.net/${PN}"
DOWNLOADS="https://invisible-mirror.net/archives/${PN}/${PNV/_p/-}.tgz"

UPSTREAM_CHANGELOG="${HOMEPAGE}/CHANGES [[ lang = en ]]"

LICENCES="LGPL-2.1"
SLOT="0"
PLATFORMS="~amd64 ~x86"
MYOPTIONS="
    examples
    ( linguas:
        an ar ast be@latin bg ca cs cy da de el eo es et eu fa fi fr fur ga gd gl hi hr hu ia id is
        it ja ku lt lv mg mk ms nb nl pl pt pt_BR rm ro ru rw sk sl sq sr sv sw th tr uk vi wa
        zh_CN zh_TW
    )
"

DEPENDENCIES="
    build:
        sys-devel/gettext
    build+run:
        sys-libs/ncurses
"

WORK=${WORKBASE}/${PNV/_p/-}

DEFAULT_SRC_CONFIGURE_PARAMS=(
    --hates=docdir
    --enable-nls
    --enable-widec
    --disable-rpath-hack
    --with-libtool
    --with-libtool-opts=-shared
    --with-ncursesw
    --without-man2html
)

src_prepare() {
    # fix cross/multiarch locale install path
    edo sed \
        -e 's:gnulocaledir = $(prefix)/share/locale:gnulocaledir = /usr/share/locale:g' \
        -i po/makefile.inn

    default
}

src_install() {
    default

    if option examples; then
        insinto /usr/share/doc/${PNVR}/examples
        doins -r samples/*
    fi

    nonfatal edo rmdir "${IMAGE}"/usr/$(exhost --target)/share
}

