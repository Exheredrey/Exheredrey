# Load environment settings from profile.env, which is created by
# "eclectic env update" from the files in /etc/env.d
if [[ -e /etc/profile.env ]] ; then
	. /etc/profile.env
fi

#077 would be more secure, but 022 is generally quite realistic
umask 022

