HOMEPAGE="http://daringfireball.net/projects/markdown/"
DOWNLOADS="http://daringfireball.net/projects/downloads/${PN}_${PV}.zip"

LICENCES="BSD-3"
SLOT="0"
PLATFORMS="~amd64 ~x86"
MYOPTIONS=""

DEPENDENCIES="
    build:
        virtual/unzip
    build+run:
        dev-lang/perl:*"

WORK=${WORKBASE}/Markdown_${PV}

UPSTREAM_DOCUMENTATION="http://markdown.infogami.com/"

src_install()
{
    dobin Markdown.pl
}

