if ever is_scm ; then
    SCM_REPOSITORY="http://llvm.org/git/openmp.git"

    require scm-git
else
    MY_PNV=openmp-${PV}.src
    WORK=${WORKBASE}/${MY_PNV}

    if [[ ${PV} == *rc* ]]; then
        DOWNLOADS="https://prereleases.llvm.org/${PV%*rc*}/rc${PV#*rc}/openmp-${PV}.src.tar.xz"
    else
        DOWNLOADS="http://llvm.org/releases/${PV}/openmp-${PV}.src.tar.xz"
    fi
fi

require cmake [ api=2 ]

export_exlib_phases src_install

SUMMARY="OpenMP runtime for clang"
HOMEPAGE="https://openmp.llvm.org/"

if ever at_least 9.0; then
    LICENCES="Apache-2.0-with-LLVM-exception"
else
    LICENCES="|| ( MIT UoI-NCSA )"
fi
SLOT="0"
MYOPTIONS="
    hwloc [[ description = [ Use the hwloc library for affinity ] ]]
    ( libc: glibc musl ) [[ number-selected = at-most-one ]]
"

LLVM_PVR=${PV}

DEPENDENCIES="
    build:
        dev-lang/perl:*
    build+run:
        libc:glibc? ( sys-libs/glibc )
        libc:musl? ( sys-libs/musl )
        hwloc? ( dev-libs/hwloc )
"

case "$(exhost --target)" in
    x86_64*)
        OPENMP_ARCH="x86_64"
        ;;
    i*86-*)
        OPENMP_ARCH="i386"
        ;;
    arm*)
        OPENMP_ARCH="arm"
        ;;
    powerpc64*)
        OPENMP_ARCH="ppc64"
        ;;
    aarch64*)
        OPENMP_ARCH="aarch64"
        ;;
esac

CMAKE_SRC_CONFIGURE_PARAMS=(
    -DLIBOMP_ARCH:STRING=${OPENMP_ARCH}
)

CMAKE_SRC_CONFIGURE_OPTIONS=(
    'hwloc LIBOMP_USE_HWLOC'
)

openmp_src_install() {
    cmake_src_install

    # We have sys-libs/libgomp, remove symlink
    rm ${IMAGE}/usr/$(exhost --target)/lib/libgomp.so
}

